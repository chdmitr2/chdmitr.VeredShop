    <Grid Background="GhostWhite">
        <DockPanel HorizontalAlignment="Left" Height="550" LastChildFill="False" VerticalAlignment="Top" Width="230" Background="Black">
            <Button Content="         To Main " Foreground="AliceBlue" HorizontalAlignment="Left" VerticalAlignment="Top" Width="224" Height="71" Background="#FF020101" IsCancel="True" FontFamily="Segoe Print" FontSize="18" FontWeight="Bold" Click="OnMain_Click"/>
        </DockPanel>
        <Button Content="About" Foreground="AliceBlue" HorizontalAlignment="Left" VerticalAlignment="Top" Width="230" Margin="0,454,0,0" Height="71" Background="#FF020101" IsCancel="True" FontFamily="Segoe Print" FontSize="18" FontWeight="Bold" Click="Button_Click"/>
        <Image Source="C:\Users\User\source\repos\VeredShop\Pictures\about.png" Margin="10,453,890,18"></Image>
        <TextBox Name="NameBox"  HorizontalAlignment="Left" Height="50" TextWrapping="Wrap" VerticalAlignment="Top" Width="378" Margin="555,122,0,0" FontSize="36" TextDecorations="{x:Null}" FontFamily="{DynamicResource MainFont}" FontStyle="Italic"/>
        <TextBox Name="LoginBox" HorizontalAlignment="Left" Height="50" TextWrapping="Wrap" VerticalAlignment="Top" Width="378" Margin="555,245,0,0" FontSize="34" TextDecorations="{x:Null}" FontFamily="{DynamicResource MainFont}" FontStyle="Italic"/>
