        <Button Content="Create and access" Foreground="White" HorizontalAlignment="Left" Margin="418,454,0,0" VerticalAlignment="Top" Width="292" Height="54" Background="#FF060202" FontSize="24" Click="Registration_Click"/>
        <TextBox Name="SurnameBox" HorizontalAlignment="Left" Height="50" TextWrapping="Wrap" VerticalAlignment="Top" Width="378" Margin="555,183,0,0" FontSize="36" TextDecorations="{x:Null}" FontFamily="{DynamicResource MainFont}" FontStyle="Italic"/>
        <PasswordBox Name="PassBox1" PasswordChar="•" HorizontalAlignment="Left" Height="50"  VerticalAlignment="Top" Width="378" Margin="555,301,0,0" FontSize="36" FontFamily="{DynamicResource MainFont}" FontStyle="Italic"/>
        <Label Content="Last Name" HorizontalAlignment="Left" Margin="240,167,0,0" VerticalAlignment="Top" FontFamily="Segoe Print" FontSize="32" FontWeight="Bold" Width="227" FontStyle="Italic"/>
        <Label Content="Email" HorizontalAlignment="Left" Margin="240,229,0,0" VerticalAlignment="Top" FontFamily="Segoe Print" FontSize="32" FontWeight="Bold" Width="184" FontStyle="Italic"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="240,295,0,0" VerticalAlignment="Top" FontFamily="Segoe Print" FontSize="32" FontWeight="Bold" Width="204" FontStyle="Italic"/>
        <Label Content="Create User" HorizontalAlignment="Left" Margin="449,10,0,0" VerticalAlignment="Top" Width="316" Height="92" FontFamily="Segoe Print" FontSize="48" FontWeight="Bold"/>
        <PasswordBox x:Name="PassBox2" PasswordChar="•" HorizontalAlignment="Left" Height="50"  VerticalAlignment="Top" Width="378" Margin="555,360,0,0" FontSize="36" FontFamily="{DynamicResource MainFont}" FontStyle="Italic"/>
        <Label Content="Repeat password" HorizontalAlignment="Left" Margin="237,356,0,0" VerticalAlignment="Top" FontFamily="Segoe Print" FontSize="32" FontWeight="Bold" Width="313" FontStyle="Italic" RenderTransformOrigin="0.491,2.092"/>
        <Image Source="C:\Users\User\source\repos\VeredShop\Pictures\home.png" Margin="0,10,890,483"/>
    </Grid>
